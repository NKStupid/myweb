
pipeline{
    agent any
    
    environment {
        PATH = "/opt/maven3/bin:$PATH"
    }
    stages{
        stage("Git Checkout"){
            steps{
                git credentialsId: 'git-credentials', url: 'https://github.com/javahometech/myweb'
            }
        }
        stage("Maven Build"){
            steps{
                def mvnHome = tool name: 'Maven', type: 'maven'
                def mvnCMD = "${mvnHome}/bin/mvn"
            }
        }
    }
}
